<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_marginStart="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@drawable/shape_line_redwhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".adapter.QuestAdapter"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:layout_marginTop="24dp"
            android:id="@+id/tKet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:text="Dapatkan poin apabila membeli"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image"/>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:text="Tori Yakiniku Tamtam"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tKet"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tHarga"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tMenu"
            android:text="30K"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iKoin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:layout_marginTop="11dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tHarga"
            app:srcCompat="@drawable/ic_coin" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tPoin"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tHarga"
            android:text="2000"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iKoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>












    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>